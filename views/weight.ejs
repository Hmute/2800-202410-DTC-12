<%- include('templates/header') %>
<link rel="stylesheet" href="/css/weight.css">
<div class="container mt-5">
    <div id="weight-section">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <button class="btn btn-secondary" onclick="window.history.back();">Back</button>
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <span>Body Weight</span>
                </div>
                <div class="d-flex justify-content-between my-2">
                    <span id="the-start">Start: <span id="start-weight"></span></span>
                    <span id="the-current">Current: <span id="current-weight"></span></span>
                    <span id="the-progress">Progress: <span id="progress"></span></span>
                </div>
                <canvas id="weightGraph" width="400" height="200"></canvas>
            </div>
        </div>
        <div id="weight-entries" class="list-group mb-3">
            <!-- Weight entries will be populated here -->
        </div>
        <form id="addWeightForm" class="form-inline">
            <input type="number" id="weightInput" class="form-control mr-2" placeholder="Enter weight in kg" required>
            <button type="submit" class="btn btn-primary">Add Body Weight</button>
        </form>
    </div>
</div>

<script src="/script/weight.js"></script>
<%- include('templates/footer') %>
