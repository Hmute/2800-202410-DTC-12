<%- include('templates/header') %>
<h1>Set Your Weight Goal</h1>

<% if (errorMessage) { %>
  <div class="error-message">
    <p><%= errorMessage %></p>
    <% if (recommendedTimeframe) { %>
      <p>Recommended timeframe: <%= recommendedTimeframe %> weeks</p>
    <% } %>
  </div>
<% } %>

<form action="/health/setWeightGoal" method="post">
  <div>
    <label for="weightGoal">Weight Goal (kg):</label>
    <input type="number" id="weightGoal" name="weightGoal" required>
  </div>
  <div>
    <label for="goalTimeframe">Goal Timeframe (weeks):</label>
    <input type="number" id="goalTimeframe" name="goalTimeframe" required>
  </div>
  <button type="submit">Submit</button>
</form>
<%- include('templates/footer') %>

<style>
  .error-message {
  background-color: #f8d7da;
  color: #721c24;
  border: 1px solid #f5c6cb;
  padding: 10px;
  margin: 10px 0;
  border-radius: 5px;
}

</style>