<%- include('templates/header') %>
<div class="container mt-5">
    <h1 class="mb-4 text-center">Workout History</h1>
    <div class="list-group">
        <% routines.forEach(function(routine) { %>
            <div class="list-group-item">
                <h5 class="mb-1"><%= routine.name || 'Unnamed Routine' %></h5>
                <small><%= routine.createdAt.toDateString() %></small>
                <p>Status: <%= routine.status %></p>
                <ul>
                    <% routine.exercises.forEach(function(exercise) { %>
                        <li><%= exercise.name %>: <%= exercise.repetitions %> reps, <%= exercise.sets %> sets</li>
                    <% }) %>
                </ul>
            </div>
        <% }) %>
    </div>
    <div class="d-flex justify-content-center mt-3">
        <a href="/home" class="btn btn-secondary">Back to Home</a>
    </div>
</div>
<%- include('templates/footer') %>