<%- include('templates/header') %>
  <div class="main-content">
    <div id="popular-section">
      <h2 id="section">Popular</h2>
      <div class="scrollable-x">
        <% popularBlogs.forEach(function(blog) { %>
          <div data-id="<%= blog._id %>" class="card custom-card-height">
            <img src="<%= blog.cloudinary %>" alt="Blog Image" class="custom-image-height">
            <div class="width-98">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex">
                  <% blog.tags.forEach(function(tag) { %>
                    <small id="tag">
                      <%= tag %>
                    </small>
                    <% }); %>
                </div>
                <small id="date">
                  <%= new Date(blog.createdAt).toLocaleDateString() %>
                </small>
              </div>
              <h2 class="text-left-custom" style="color: black;">
                <%= blog.title %>
              </h2>
            </div>
          </div>
          <% }); %>
      </div>
    </div>

    <div id="latest-section" class="my-3">
      <h2 id="section">Latest</h2>
      <% blogs.forEach(function(blog) { %>
        <div data-id="<%= blog._id %>" class="card custom-card-height">
          <img src="<%= blog.cloudinary %>" alt="Blog Image" class="custom-image-height">
          <div class="width-98">
            <div class="d-flex justify-content-between align-items-center">
              <div class="d-flex">
                <% blog.tags.forEach(function(tag) { %>
                  <small id="tag">
                    <%= tag %>
                  </small>
                  <% }); %>
              </div>
              <small id="date">
                <%= new Date(blog.createdAt).toLocaleDateString() %>
              </small>
            </div>
            <h2 class="text-left-custom" style="color: black; padding-left: 5px; padding-right: 5px;">
              <%= blog.title %>
            </h2>
          </div>
        </div>
        <% }); %>
    </div>

    <!-- Floating Action Buttons -->
    <div class="fab-container">
      <button class="fab-button" id="createPostButton">
        <i class="fas fa-plus"></i>
      </button>
    </div>
    <div class="fab-container-view">
      <button class="fab-button" id="viewPostButton">
        <i class="fas fa-list"></i>
      </button>
    </div>
  </div>
  <%- include('templates/footer') %>