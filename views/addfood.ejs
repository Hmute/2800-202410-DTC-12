<%- include('templates/header') %>
<link href="/css/addFood.css" rel="stylesheet"> <div class="container">
  <button class="back-button" onclick="window.location.href='/home'">Back</button>

  <div class="food-card"> <form method="POST" action="/addFood"> 
      <div class="form-group">
        <label for="food">Food:</label>
        <input type="text" id="food" name="food" value="Chicken Nuggets">
      </div>
      <div class="form-group">
        <label for="protein">Protein (g):</label>
        <input type="number" id="protein" name="protein" value="89.9">
      </div>
      <div class="form-group">
        <label for="carbs">Carbohydrates (g):</label>
        <input type="number" id="carbs" name="carbs" value="219.6">
      </div>
      <div class="form-group">
        <label for="fat">Fat (g):</label>
        <input type="number" id="fat" name="fat" value="129.7">
      </div>
      <div class="form-group">
        <label for="calories">Calories:</label>
        <input type="number" id="calories" name="calories" value="1499.5">
      </div>
      <button type="submit" class="delete-button">Delete Entry</button> 
    </form>
  </div>

  <div class="add-button-container">
    <button class="add-button">+</button>
  </div>  
</div>

<%- include('templates/footer') %>
