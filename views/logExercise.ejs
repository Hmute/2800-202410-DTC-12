<%- include('templates/header') %>
<link href="/css/logExercise.css" rel="stylesheet">
<div id="exerciseCardsContainer" class="exercise-container">
  <button class="back-button" id ="backbutton" onclick="window.location.href='/home'">Back</button> 

  <div class="exercise-card"> 
      <form method="POST" action="/logExercise">
          <div class="form-group">
              <label for="exercise">Exercise:</label>
              <input type="text" id="exercise" name="exercise" value="Bench Press">
          </div>
          <div class="form-group">
              <label for="sets">Sets:</label>
              <input type="number" id="sets" name="sets" value="3">
          </div>
          <div class="form-group">
              <label for="reps">Reps:</label>
              <input type="number" id="reps" name="reps" value="15">
          </div>
          <div class="form-group">
              <label for="weight">Weight (kg):</label>
              <input type="number" id="weight" name="weight" value="45">
          </div>
          <div class="form-group">
              <label for="complete">Complete:</label>
              <select id="complete" name="complete">
                  <option value="Yes">Yes</option>
                  <option value="No">No</option>
              </select>
          </div>
          <button type="submit" class="save-button" id="saveButton">Save Entry</button>
      </form>

  </div>
  <div class="add-button-container">
  <button class="add-button" id="addButton">+</button> 
  </div>  
</div>


<script src="/script/addExercise.js"></script>
<script src="/script/deleteExercise.js"></script>
<%- include('templates/footer') %>