<link href="/css/homeBot.css" rel="stylesheet">

<div class="accordion accordionHome" id="accordionExample">
    <div class="card CardMealExercise" style="background-color: #2E2F38">
        <div class="card-header" id="headingOne" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
            <h5 class="mb-0">
                <a class="text-white" style="text-decoration: none;">Meal</a>
            </h5>
        </div>
        <div id="collapseOne" class="collapse" aria-labelledby="headingOne">
            <div class="card-body MealCardBody">
                <div class="card FoodCard" style="background-color: #3E3F48;">
                    <div class="card-header Food" style="background-color: #3E3F48; color: white;">
                        <div class="Breakfast">
                            <b>Breakfast</b>
                        </div>
                        <a href="/addFood" class="btn btn-primary FoodButton">Add food</a>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item first-breakfast-item" style="background-color: #3E3F48; color: white;">
                            <div>Boiled Egg</div>
                        </li>
                        <li class="list-group-item second-breakfast-item" style="background-color: #3E3F48; color: white;">Fried Chicken</li>
                        <li class="list-group-item third-breakfast-item" style="background-color: #3E3F48; color: white;">Korean Fried Chicken</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="card CardMealExercise" style="background-color: #2E2F38;">
        <div class="card-header" id="headingTwo" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
            <h5 class="mb-0">
                <a class="text-white" style="text-decoration: none;">Exercises</a>
            </h5>
        </div>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo">
            <div class="card-body ExerciseCardBody">
                <% routines.forEach((routine) => { %>
                    <% routine.exercises.forEach((exercise) => { %>
                        <div class="card ExerciseCard" style="background-color: #3E3F48;">
                            <div class="card-body">
                                <h5 class="card-title workoutTitle"><b><%= exercise.name %></b></h5>
                                <div class="exercise-info">
                                    <p class="card-text">
                                        <%= exercise.time ? exercise.time + ' minutes' : '' %>
                                        <%= exercise.sets ? ' ' + exercise.sets + ' Sets' : '' %>
                                        <%= exercise.repetitions ? ' ' + exercise.repetitions + ' Reps' : '' %>
                                        <%= exercise.weight ? ' ' + exercise.weight + ' kg' : '' %>
                                    </p>
                                </div>
                                <div class="logrow">
                                    <a href="/logExercise" class="btn btn-primary Log">Edit</a>
                                    <p class="completion" style= 'color: <%= exercise.completion === 'Yes' ? 'green' : 'red' %>'>
                                        <%= exercise.completion === 'Yes' ? 'Complete' : 'Incomplete' %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% }); %>
            </div>
        </div>
    </div>
</div>


